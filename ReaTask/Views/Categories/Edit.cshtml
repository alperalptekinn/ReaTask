@model ReaTask.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Kategori Düzenle
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="float-end">
                    <button type="submit" class="btn btn-outline-success">Düzenle</button>
                    <button asp-action="Index" class="btn btn-outline-primary">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
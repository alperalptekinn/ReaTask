@model IEnumerable<ReaTask.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            @await Component.InvokeAsync("NewProductComponents")
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Ürünler
                    <a class="btn btn-sm btn-primary float-end" asp-action="Create">Ürün Ekle</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Ürün Adı
                                </th>
                                <th>
                                    Kategori Adı
                                </th>
                                <th class="text-center">
                                    Yeni Ürün
                                </th>
                                <th>
                                    Ürün Fiyatı
                                </th>
                                <th class="text-end">
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.IsNew)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)₺
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            İşlemler
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Detay</a></li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a></li>
                                            <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Sil</a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>